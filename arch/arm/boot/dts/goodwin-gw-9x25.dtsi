#include "at91sam9x25.dtsi"

/ {
	memory {
		reg = <0x20000000 0x8000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <12000000>;
		};
	};

	leds {
		compatible = "gpio-leds";

		pb18 {
			label = "pb18";
			gpios = <&pioB 18 1>;
			linux,default-trigger = "heartbeat";
		};

		pd21 {
			label = "pd21";
			gpios = <&pioD 21 0>;
		};
	};

	max6369 {
		/* WDT can be disabled by setting switch 1:1 to off */
		compatible = "generic,gpio-wdt";
		gpios = <&pioB 13 0>;
		ping-sec = <5>;
		timeout-sec = <60>;
	};
		
	ahb {
		nand0: nand@40000000 {
			nand-bus-width = <8>;
			nand-ecc-mode = "hw";
			atmel,has-pmecc;	/* Enable PMECC */
			atmel,pmecc-cap = <2>;
			atmel,pmecc-sector-size = <512>;
			nand-on-flash-bbt;
			status = "okay";
		};

		apb {
			spi0: spi@f0000000 {
				status = "okay";
				cs-gpios = <&pioA 14 0>;
				m25p80@0 {
					/* Close switch 1:2 to enable */
					compatible = "atmel,at25df321a";
					spi-max-frequency = <50000000>;
					reg = <0>;
				};
			};

			dbgu: serial@fffff200 {
				status = "okay";
			};


			i2c0: i2c@f8010000 {
				status = "okay";

				mcp79410: rtc@6f {
					compatible = "microchip,mcp79410";
					reg = <0x6f>;
				};
			};

			macb0: ethernet@f802c000 {
				status = "okay";
				phy-mode = "rmii";
			};

			macb1: ethernet@f8030000 {
				status = "okay";
				phy-mode = "rmii";
			};

			mmc0: mmc@f0008000 {
				pinctrl-0 = <&pinctrl_mmc0_slot0_clk_cmd_dat0 &pinctrl_mmc0_slot0_dat1_3>;
				pinctrl-names = "default";
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
				};
			};

			mmc1: mmc@f000c000 {
				pinctrl-0 = <&pinctrl_mmc1_slot0_clk_cmd_dat0 &pinctrl_mmc1_slot0_dat1_3>;
				pinctrl-names = "default";
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
				};
			};

		};

		usb0: ohci@00600000 {
			status = "okay";
			num-ports = <3>;
			atmel,vbus-gpio = <&pioB 16 1
					   &pioD 18 0
					   &pioD 19 0
					  >;
		};

		usb1: ehci@00700000 {
			status = "okay";
		};
	};
};

