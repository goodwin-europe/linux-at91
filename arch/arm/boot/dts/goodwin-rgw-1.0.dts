/dts-v1/;
/include/ "at91sam9x25.dtsi"

/ {
	model = "Goodwin RGW 1.0";
	compatible = "goodwin,rgw-1.0", "atmel,at91sam9x5", "atmel,at91sam9";

	chosen {
		bootargs = "128M console=ttyS0,115200 root=/dev/mtdblock1 rw rootfstype=ubifs ubi.mtd=1 root=ubi0:rootfs";
	};

	memory {
		reg = <0x20000000 0x8000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <12000000>;
		};
	};

	leds {
		compatible = "gpio-leds";

		pb18 {
			label = "pb18";
			gpios = <&pioB 18 1>;
			linux,default-trigger = "heartbeat";
		};

		pd20 {
			label = "pd20";
			gpios = <&pioD 20 0>;
		};

		pd21 {
			label = "pd21";
			gpios = <&pioD 21 0>;
		};
	};

	max6369 {
		compatible = "generic,gpio-wdt";
		gpios = <&pioB 13 0>;
		ping-sec = <5>;
		timeout-sec = <60>;
	};
		
	ahb {
		nand0: nand@40000000 {
			nand-bus-width = <8>;
			nand-ecc-mode = "hw";
			atmel,has-pmecc;	/* Enable PMECC */
			atmel,pmecc-cap = <2>;
			atmel,pmecc-sector-size = <512>;
			nand-on-flash-bbt;
			pinctrl-0 = <&pinctrl_nand_rdy_enable &pinctrl_nand_oe_we_ale_cle &pinctrl_nand_bus_on_d16_8bit>;
			status = "okay";

			boot@0 {
				label = "at91bootstrap";
				reg = <0x0 0x400000>;
			};

			rootfs@400000 {
				label = "rootfs";
				reg = <0x400000 0x3c00000>;
			};

			data@400000 {
				label = "data";
				reg = <0x4000000 0x1c000000>;
			};
		};

		apb {
			spi0: spi@f0000000 {
				status = "okay";
				cs-gpios = <&pioA 14 0>;
				m25p80@0 {
					compatible = "atmel,at25df321a";
					spi-max-frequency = <50000000>;
					reg = <0>;
				};
			};


			dbgu: serial@fffff200 {
				status = "okay";
			};


			/* GSM modem AUX */
			usart1: serial@f8020000 {
				status = "okay";
			};

			usart3: serial@f8028000 {
				status = "okay";
				pinctrl-0 = <&pinctrl_usart3 &pinctrl_usart3_rts>;
				linux,rs485-enabled-at-boot-time;
				rs485-rts-delay = <0 0>;
			};

			i2c0: i2c@f8010000 {
				status = "okay";

				mcp79410: rtc@6f {
					compatible = "microchip,mcp79410";
					reg = <0x6f>;
				};
				
			};

			macb0: ethernet@f802c000 {
				status = "okay";
			};

			macb1: ethernet@f8030000 {
				status = "okay";
			};


			pinctrl@fffff400 {
				board {
					pinctrl_mmc0_cd: mmc0_cd {
						atmel,pins =
							<3 15 0x0 0x5>;	/* PD15 gpio with pullup deglitch */
					};

					pinctrl_mmc1_cd: mmc1_cd {
						atmel,pins =
							<3 14 0x0 0x5>;	/* PD14 gpio with pullup deglitch */
					};
				};
			};

			mmc0: mmc@f0008000 {
				pinctrl-0 = <&pinctrl_mmc0_clk_cmd_dat0 &pinctrl_mmc0_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
				};
			};

			mmc1: mmc@f000c000 {
				pinctrl-0 = <&pinctrl_mmc1_clk_cmd_dat0 &pinctrl_mmc1_dat1_3>;
				slot@0 {
					reg = <0>;
					bus-width = <4>;
				};
			};


			macb0: ethernet@f802c000 {
				phy-mode = "rmii";
			};

			macb1: ethernet@f8030000 {
				phy-mode = "rmii";
			};

		};

		usb0: ohci@00600000 {
			status = "okay";
			num-ports = <3>;
			atmel,vbus-gpio = <&pioB 16 1
					   &pioD 18 0
					   &pioD 19 0
					  >;
		};

		usb1: ehci@00700000 {
			status = "okay";
		};
	};
};

