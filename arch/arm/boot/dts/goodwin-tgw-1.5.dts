/dts-v1/;
#include "at91sam9g20.dtsi"

/ {
	model = "Goodwin RGW-1.5";
	compatible = "goodwin,rgw-1.5", "goodwin,at91sam9-extmac",
	             "atmel,at91sam9g20", "atmel,at91sam9";

	chosen {
		bootargs = "mem=64M console=ttyS0,115200 root=/dev/mtdblock5 rw rootfstype=ubifs";
	};

	memory {
		reg = <0x20000000 0x4000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <18432000>;
		};
	};

	leds {
		compatible = "gpio-leds";

		pa9 {
			label = "pa9";
			gpios = <&pioA 9 0>;
			linux,default-trigger = "heartbeat";
		};

		pb2 {
			label = "pb2";
			gpios = <&pioB 2 1>;
		};

		pa6 {
			label = "pa6";
			gpios = <&pioA 6 1>;
		};
	};

	max6369 {
		/* WDT can be disabled by setting switch 1:1 to off */
		compatible = "generic,gpio-wdt";
		gpios = <&pioC 4 0>;
		ping-sec = <5>;
		timeout-sec = <60>;
	};

	ahb {
		apb {
			dbgu: serial@fffff200 {
				status = "okay";
			};

			usart0: serial@fffb0000 {
				pinctrl-0 =
					<&pinctrl_usart0
					 &pinctrl_usart0_rts
					 &pinctrl_usart0_cts
					 &pinctrl_usart0_dtr_dsr
					 &pinctrl_usart0_dcd
					 &pinctrl_usart0_ri>;
				status = "okay";
			};

			usart1: serial@fffb4000 {
				status = "okay";
				pinctrl-0 = <&pinctrl_usart1
				             &pinctrl_usart1_rts
				             &pinctrl_usart1_cts>;
			};

			/* FIXME: check serials one more time
			   find out how I missed pinctl-names in mmc0 */
			usart2: serial@fffb8000 {
				pinctrl-0 = <&pinctrl_usart2>;
				status = "okay";
			};

			macb0: ethernet@fffc4000 {
				phy-mode = "mii";
				status = "okay";
			};

			usb1: gadget@fffa4000 {
				atmel,vbus-gpio = <&pioC 5 0>;
				status = "okay";
			};


			mmc0: mmc@fffa8000 {
				pinctrl-0 = <
					&pinctrl_mmc0_clk
					&pinctrl_mmc0_slot1_cmd_dat0
					&pinctrl_mmc0_slot1_dat1_3>;
				pinctrl-names = "default";
				status = "okay";
				slot@1 {
					reg = <1>;
					bus-width = <4>;
				};
			};

			adc0: adc@fffe0000 {
				atmel,adc-channels-used = <0x1>;
				atmel,adc-num-channels = <1>;
				status = "okay";
			};

			i2c0: i2c@fffac000 {
				status = "okay";

				mcp79410: rtc@6f {
					compatible = "microchip,mcp79410";
					reg = <0x6f>;
				};

				sensor1: lm75@48 {
					compatible = "lm75";
					reg = <0x48>;
				};
			};

			watchdog@fffffd40 {
				status = "okay";
			};
		};

		nand0: nand@40000000 {
			nand-bus-width = <8>;
			nand-ecc-mode = "soft";
			nand-on-flash-bbt;
			status = "okay";
		};

		usb0: ohci@00500000 {
			num-ports = <2>;
			status = "okay";
			atmel,vbus-gpio = <&pioB 0 1>;
		};

		ax88796c0: ax88796c@10000000 {
			compatible = "asix,ax88796c";
			reg = <0x10000000 0x8000>;
			interrupts = <0x1d IRQ_TYPE_LEVEL_HIGH 0x3>;
			status = "okay";
		};
	};

};
